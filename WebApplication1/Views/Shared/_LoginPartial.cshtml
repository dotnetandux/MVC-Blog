 @using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<httpCookies httpOnlyCookies="true" requireSSL="true" />
<link rel="stylesheet" href="~/css/main.css" />

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="nav">
        <ul class="links">
            @if (User.IsInRole("Admin"))
            {
                <li><a asp-controller="ManageUsers" asp-action="Index">Manage</a></li>
            }
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="actions">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="links">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}